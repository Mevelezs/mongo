use("sample_weatherdata");

db.createCollection("users", {
  // crea la coleccion con las especificaciones
  validator: {
    // valida los datos
    $jsonSchema: {
      // tipo de datos de la schema
      bsonType: "object", // tipo de dato
      required: ["password", "email", "role"], // campos requeridos
      additionalProperties: false, // no dejs agregar atributos que no est√©n el esta schema
      properties: {
        // campos de la coleccion
        name: {
          // campo name
          bsonType: "string", // tipo de dato
        },
        last_Name: {
          bsonType: "string",
        },
        email: {
          bsonType: "string",
        },
        password: {
          bsonType: "string",
          pattern: "^[A-Za-z0-9]{8,100}$"
        },
        age: {
          bsonType: "number",
          minimum: 18,
          maximum: 99,
        },
        isSingle: {
          bsonType: "bool",
        },
        role: {
          enum: ["customer", "seller", "admin"],
        },
      },
    },
  },
});
